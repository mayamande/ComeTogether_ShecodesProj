<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:paddingRight="57dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="80dp">

        <Button
            android:id="@+id/signup"
            android:layout_width="137dp"
            android:layout_height="59dp"
            android:onClick="go_to_signup"
            android:text="Sign Up"
            tools:layout_gravity="left" />

        <Button
            android:id="@+id/login"
            android:layout_width="137dp"
            android:layout_height="59dp"
            android:onClick="go_to_login"
            android:text="Log In"
            tools:layout_gravity="right" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/login_frame"
        android:layout_width="274dp"
        android:layout_height="400dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="239dp" >

            <EditText
                android:layout_height="59dp"
                android:layout_width="200dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:inputType="text"
                android:id="@+id/username_login"
                android:text="Username"

           />
        <EditText
            android:layout_height="59dp"
            android:layout_width="200dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/password_login"
            android:inputType="textPassword"
            android:text="Password"         />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="230dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/try_login"
            android:layout_width="137dp"
            android:layout_height="59dp"
            android:onClick="try_login_in"
            android:text="Log In"
            android:layout_marginTop="250dp"
            tools:layout_gravity="center_horizontal" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/signup_frame"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="239dp"
        android:visibility="invisible">

        <EditText
            android:layout_height="59dp"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/FirstName_signup"
            android:inputType="text"
            android:text="First Name"         />

        <EditText
            android:layout_height="59dp"
            android:layout_width="200dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/LastName_signup"
            android:inputType="text"
            android:text="Last Name"         />

        <EditText
            android:layout_height="59dp"
            android:layout_width="200dp"
            android:layout_marginTop="130dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:inputType="text"
            android:id="@+id/username_signup"
            android:text="Username"
            />

        <EditText
        android:layout_height="59dp"
        android:layout_width="200dp"
        android:layout_marginTop="190dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:id="@+id/password_signup"
        android:inputType="textPassword"
        android:text="Password"         />

        <EditText
            android:layout_height="59dp"
            android:layout_width="200dp"
            android:layout_marginTop="250dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/email_signup"
            android:inputType="text"
            android:text="Email"         />

        <EditText
            android:layout_height="59dp"
            android:layout_width="200dp"
            android:layout_marginTop="310dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/Birthday_signup"
            android:inputType="date"
            android:text="Birthday"         />
        <Button
            android:id="@+id/try_sign_up"
            android:layout_width="137dp"
            android:layout_height="59dp"
            android:onClick="try_sign_up"
            android:text="Sign Up"
            android:layout_marginTop="370dp"
            tools:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/error_signup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="430dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>


    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>